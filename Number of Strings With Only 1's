impl Solution {
    pub fn num_sub(s: String) -> i64 {
        let s : Vec<char> = s.chars().collect() ;
        let mut i = 0 ;
        let mut cnt = 0 ;
        let mut ans = 0 ;
        let n = s.len() ;
        while i < n {
            cnt = 0 ;
            while i < n && s[i] == '1' {
                cnt += 1 ;
                i += 1 ;
            }
            ans += ((cnt * (cnt + 1)) / 2) ;
            i += 1;
        }
        return ans % (1000000000 + 7)
    }
}
